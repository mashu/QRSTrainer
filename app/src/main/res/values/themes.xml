<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Modern App Theme with Material Design 3 -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- App Bar Overlay -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Popup Overlay -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Modern Button Style -->
    <style name="ModernButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Modern Outlined Button -->
    <style name="ModernOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Modern Text Button -->
    <style name="ModernTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Modern Text Styles -->
    <style name="ModernHeadline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ModernHeadline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernHeadline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernBody1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Sequence Display Styles -->
    <style name="SequenceDisplayText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Morse Keyboard Button Style -->
    <style name="MorseKeyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/morse_key_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Progress Indicator Styles -->
    <style name="ProgressText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ProgressSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Card Styles -->
    <style name="ModernCard">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="ModernFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/white_70</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- Switch Style -->
    <style name="ModernSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/primary_light</item>
    </style>

    <!-- Slider Style -->
    <style name="ModernSlider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/primary</item>
        <item name="trackColorActive">@color/primary</item>
        <item name="trackColorInactive">@color/grey_300</item>
        <item name="thumbRadius">12dp</item>
        <item name="trackHeight">4dp</item>
    </style>

    <!-- Navigation Item Styles -->
    <style name="NavItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Settings Items -->
    <style name="SettingsItemStyle">
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Character Stats -->
    <style name="CharacterStatsItem">
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>

