<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Character Display -->
        <TextView
            android:id="@+id/textCharacter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/character_circle"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/primary_blue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Character Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMorsePattern"
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="·−"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/grey_800" />

            <TextView
                android:id="@+id/textAccuracy"
                style="@style/Text.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Accuracy: 85%"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Statistics -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/textCorrectCount"
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ 12"
                android:textColor="@color/success_green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textIncorrectCount"
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="✗ 3"
                android:textColor="@color/error_red"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 