<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Speed Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_speed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <SeekBar
                android:id="@+id/seekbar_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="50"
                android:progress="20" />

            <TextView
                android:id="@+id/text_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 WPM"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <!-- Level Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_level"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <SeekBar
                android:id="@+id/seekbar_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="40"
                android:progress="2" />

            <TextView
                android:id="@+id/text_level_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_lock_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_lock_level"
            android:layout_marginBottom="24dp" />

        <!-- Group Size Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_group_size_min"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <SeekBar
                android:id="@+id/seekbar_group_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:progress="1" />

            <TextView
                android:id="@+id/text_group_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_group_size_max"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <SeekBar
                android:id="@+id/seekbar_group_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="15"
                android:progress="5" />

            <TextView
                android:id="@+id/text_group_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <!-- Timing Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_answer_timeout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <SeekBar
                android:id="@+id/seekbar_timeout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="30"
                android:progress="10" />

            <TextView
                android:id="@+id/text_timeout_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10s"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_repeat_count"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <SeekBar
                android:id="@+id/seekbar_repeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="5"
                android:progress="2" />

            <TextView
                android:id="@+id/text_repeat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2x"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <!-- Progression Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_required_correct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <SeekBar
                android:id="@+id/seekbar_required_correct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="50"
                android:progress="10" />

            <TextView
                android:id="@+id/text_required_correct_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginStart="16dp"
                android:minWidth="70dp" />
        </LinearLayout>

        <!-- Reset Progress -->
        <Button
            android:id="@+id/button_reset_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_reset_progress"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView> 