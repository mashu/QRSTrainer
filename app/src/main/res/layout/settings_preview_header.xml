<?xml version="1.0" encoding="utf-8"?>
<!-- Real-time Preview Toggle Header Module -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card.Modern"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:background="@color/accent_green"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ§ Real-time Preview"
                android:textSize="18sp"
                android:textColor="@color/grey_800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play sample when adjusting settings"
                android:textSize="12sp"
                android:textColor="@color/grey_600" />

        </LinearLayout>

        <Switch
            android:id="@+id/switchRealTimePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/accent_green"
            android:trackTint="@color/grey_300" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 